---
import { Image } from 'astro:assets';

import FIRE from '@assets/icons/element/spr_ui_atlas_element_01.png';
import WATER from '@assets/icons/element/spr_ui_atlas_element_02.png';
import THUNDER from '@assets/icons/element/spr_ui_atlas_element_03.png';
import ICE from '@assets/icons/element/spr_ui_atlas_element_04.png';
import DRAGON from '@assets/icons/element/spr_ui_atlas_element_05.png';
import POISON from '@assets/icons/element/spr_ui_atlas_element_06.png';
import PARALYSIS from '@assets/icons/element/spr_ui_atlas_element_07.png';
import SLEEP from '@assets/icons/element/spr_ui_atlas_element_08.png';
import BLAST from '@assets/icons/element/spr_ui_atlas_element_09.png';
import { ElementType } from '@constants';

interface Props {
  key: string;
  alt: string;
  width?: number;
  height?: number;
}

const { key, alt, width, height } = Astro.props;

const elementMap: Record<string, ImageMetadata> = {
  [ElementType.FIRE]: FIRE,
  FIRE,
  [ElementType.WATER]: WATER,
  WATER,
  [ElementType.THUNDER]: THUNDER,
  THUNDER,
  [ElementType.ICE]: ICE,
  ICE,
  [ElementType.DRAGON]: DRAGON,
  DRAGON,
  [ElementType.POISON]: POISON,
  POISON,
  [ElementType.PARALYSIS]: PARALYSIS,
  PARALYSIS,
  [ElementType.SLEEP]: SLEEP,
  SLEEP,
  [ElementType.BLAST]: BLAST,
  BLAST,
};

const src = elementMap[key];
---

{!!src && <Image src={src} alt={alt} width={width} height={height} />}
